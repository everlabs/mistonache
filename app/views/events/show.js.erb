$('.modal-title').html('<%= @event.title %>');
$('.modal-body .image').html('<%= image_tag @event.image_url(:big) %>');
$('.modal-body .description').html('<%= escape_javascript @event.description.html_safe %>');
$('.modal-body .start_date').html('<i class="fa fa-clock-o" aria-hidden="true"></i> <%= l @event.start_date, format: :short %>');
$('.modal-body .place').html('<i class="fa fa-map-marker" aria-hidden="true"></i> <%= @event.place.name %>');
<% if @event.event_category.present? %>
  $('.modal-body .event-category').html('<i class="fa fa-tag" aria-hidden="true"></i> <%= @event.event_category.name %>');
<% end %>
